  <!-- Vanta dependencies + Waves effect -->
  <!-- Vanta usage is documented as ‚Äúdrop in script tags + initialize on an element‚Äù. -->
  <!-- Sources: Vanta site + GitHub + npm readme. -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.waves.min.js"></script>

  <script>
    // --- Window system (open/close + draggable + focus) ---
    const windowsRoot = document.getElementById("windows");
    const icons = document.querySelectorAll(".icon[data-open]");
    const closeBtns = document.querySelectorAll("button[data-close]");
    const closeAllBtn = document.getElementById("closeAll");

  const winMap = {
    deus: document.getElementById("win-deus"),
    think: document.getElementById("win-think"),
    sugar: document.getElementById("win-sugar"),
    links: document.getElementById("win-links"),
  };


    let zTop = 10;

    function showWin(key){
      const w = winMap[key];
      if(!w) return;
      w.classList.add("show");
      focusWin(w);
      // Nudge into view if somehow offscreen
      clampToViewport(w);
    }

    function hideWin(key){
      const w = winMap[key];
      if(!w) return;
      w.classList.remove("show");
    }

    function focusWin(w){
      zTop += 1;
      w.style.zIndex = String(zTop);
    }

    function clampToViewport(w){
      const rect = w.getBoundingClientRect();
      let left = rect.left;
      let top = rect.top;

      const pad = 10;
      const maxLeft = window.innerWidth - rect.width - pad;
      const maxTop  = window.innerHeight - rect.height - pad;

      left = Math.min(Math.max(left, pad), Math.max(pad, maxLeft));
      top  = Math.min(Math.max(top, pad), Math.max(pad, maxTop));

      w.style.left = left + "px";
      w.style.top  = top + "px";
    }

    icons.forEach(ic => {
      ic.addEventListener("click", () => showWin(ic.dataset.open));
    });

    closeBtns.forEach(btn => {
      btn.addEventListener("click", () => hideWin(btn.dataset.close));
    });

    closeAllBtn.addEventListener("click", () => {
      Object.keys(winMap).forEach(hideWin);
    });

    // Click-to-focus on any window
    Object.values(winMap).forEach(w => {
      w.addEventListener("mousedown", () => focusWin(w));
      w.addEventListener("touchstart", () => focusWin(w), {passive:true});
    });

    // Draggable windows (drag from winbar)
    function makeDraggable(winEl){
      const bar = winEl.querySelector(".winbar");
      if(!bar) return;

      let dragging = false;
      let startX = 0, startY = 0;
      let startLeft = 0, startTop = 0;

      const onDown = (clientX, clientY) => {
        dragging = true;
        focusWin(winEl);
        const rect = winEl.getBoundingClientRect();
        startX = clientX;
        startY = clientY;
        startLeft = rect.left;
        startTop = rect.top;
      };

      const onMove = (clientX, clientY) => {
        if(!dragging) return;
        const dx = clientX - startX;
        const dy = clientY - startY;
        winEl.style.left = (startLeft + dx) + "px";
        winEl.style.top  = (startTop + dy) + "px";
      };

      const onUp = () => {
        if(!dragging) return;
        dragging = false;
        clampToViewport(winEl);
      };

      bar.addEventListener("mousedown", (e) => {
        // prevent text selection while dragging
        e.preventDefault();
        onDown(e.clientX, e.clientY);
        window.addEventListener("mousemove", mouseMove);
        window.addEventListener("mouseup", mouseUp, { once:true });
      });

      const mouseMove = (e) => onMove(e.clientX, e.clientY);
      const mouseUp = () => {
        window.removeEventListener("mousemove", mouseMove);
        onUp();
      };

      // Touch support
      bar.addEventListener("touchstart", (e) => {
        const t = e.touches[0];
        onDown(t.clientX, t.clientY);
      }, {passive:true});

      bar.addEventListener("touchmove", (e) => {
        if(!dragging) return;
        const t = e.touches[0];
        onMove(t.clientX, t.clientY);
      }, {passive:true});

      bar.addEventListener("touchend", () => onUp(), {passive:true});
      bar.addEventListener("touchcancel", () => onUp(), {passive:true});
    }

    Object.values(winMap).forEach(makeDraggable);

    window.addEventListener("resize", () => {
      Object.values(winMap).forEach(w => w.classList.contains("show") && clampToViewport(w));
    });

    // Open your main window by default (cute ‚Äúboot‚Äù feel)
    showWin("projects");
    showWin("links");

    // --- Vanta Waves background ---
    let waves = null;
    let wavesOn = true;
    const toggleWavesBtn = document.getElementById("toggleWaves");

    function startWaves(){
      if(waves) return;
      waves = VANTA.WAVES({
        el: "#bg",
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        minHeight: 200.00,
        minWidth: 200.00,
        scale: 1.00,
        scaleMobile: 1.00,
        shininess: 35.00,
        waveHeight: 14.00,
        waveSpeed: 0.70,
        zoom: 0.95
      });
    }

    function stopWaves(){
      if(!waves) return;
      waves.destroy();
      waves = null;
    }

    toggleWavesBtn.addEventListener("click", () => {
      wavesOn = !wavesOn;
      if(wavesOn) startWaves();
      else stopWaves();
      toggleWavesBtn.innerHTML = (wavesOn ? "üåä" : "ü´ß") + " <span>Waves</span>";
    });

    startWaves();
  </script>
</body>
